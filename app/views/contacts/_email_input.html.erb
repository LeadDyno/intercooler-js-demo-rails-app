<div class="form-group <%= 'has-error' if @contact.errors[:email].present? %> <%= 'has-success' if !@contact.errors[:email].present? && params['ic-request'] %> ">
  <label class="control-label">Email</label>
  <input class="form-control"
         ic-indicator="#email-indicator"
         ic-post-to="/contacts/1/email_input"
         ic-target="#email-input"
         ic-transition="none"
         name="contact[email]"
         value="<%=@contact.email%>"/>
  <span class="help-block"><%= @contact.errors[:email].join(',') if @contact.errors[:email].present? %></span>
</div>
