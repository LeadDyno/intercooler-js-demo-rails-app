<form id="ids" ic-src="/contacts/table" ic-deps="/contacts" ic-always-update="true">
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% Contact.find_each do |c| %>
            <tr>
              <td><%= check_box_tag 'ids[]', c.id %></td>
              <td><%= link_to c.email, c %></td>
              <td><%= c.first_name %></td>
              <td><%= c.last_name %></td>
              <td><%= c.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</form>